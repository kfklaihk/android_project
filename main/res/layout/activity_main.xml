<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/digit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#FF4081"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/digit2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/digit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/digit1" />

    <TextView
        android:id="@+id/digit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        app:layout_constraintLeft_toRightOf="@id/digit2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/digit1" />

    <Button
        android:id="@+id/reel1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一桿"
        android:textSize="20sp"
        android:padding="20dp"
        android:backgroundTint="#FF4081"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="@id/digit1"
        app:layout_constraintRight_toRightOf="@id/digit1"
        app:layout_constraintTop_toBottomOf="@id/digit1" />

    <Button
        android:id="@+id/reel2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第二桿"
        android:textSize="20sp"
        android:padding="20dp"
        android:backgroundTint="#3F51B5"
        app:layout_constraintLeft_toLeftOf="@id/digit2"
        app:layout_constraintRight_toRightOf="@id/digit2"
        app:layout_constraintTop_toTopOf="@id/reel1Button" />

    <Button
        android:id="@+id/reel3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三桿"
        android:textSize="20sp"
        android:padding="20dp"
        android:backgroundTint="#4CAF50"
        app:layout_constraintLeft_toLeftOf="@id/digit3"
        app:layout_constraintRight_toRightOf="@id/digit3"
        app:layout_constraintTop_toTopOf="@id/reel1Button" />

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新開始"
        android:textSize="24sp"
        android:padding="20dp"
        android:backgroundTint="#FF9800"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reel2Button" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newGameButton" />

    <TextView
        android:id="@+id/instructionsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="遊戲玩法: 順序按下控制桿, 按下時數字會跳動, 鬆開會慢慢停下, 如得到3個相同數字, 會出現&quot;Bingo&quot;字樣, 如得到連續數字, 會出現&quot;Excellent&quot;字樣"
        android:textSize="18sp"
        android:textColor="#333333"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultText" />

</androidx.constraintlayout.widget.ConstraintLayout> 